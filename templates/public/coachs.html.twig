{% extends 'base.html.twig' %}

{% block title %}Les Profils de tous les Coachs{% endblock %}

{% block metaDescription %}<meta name="Les Coachs Inscrits" description="Consulter sur notre page tous les profils de nos Coachs inscrits sur Set & Match. Vous trouverez des Coachs Sportifs, Fitness, Masseurs ou KinÃ©s !" />{% endblock %}

{% block content %}

        <div class="row justify-content-around pt-5">
            <h1 class="titre mt-5 py-1">Les Coachs</h1>
        </div>


        <div class="row text-center py-5">

            <div class="listing col-md-8 offset-md-2">

            {# boucle qui va appeler les profils coachs en bdd #}

                {% for user in users %}
                  <div class="tile-wrap m-4">
                    <a href="{{ path('coach_profil_public', {id: user.id}) }}">
                    <div class="card profil_joueur" style="width: 15rem;">
                      {% if user.imageName %}
                          <img src="{{ asset('img/' ~ user.imageName ) }}" class="card-img-top" alt="Portrait de {{ user.prenom }} {{ user.nom }}" loading="lazy">
                        {% else %}
                          <img src="{{ asset('img/default_coach.jpg') }}" class="card-img-top" alt="Portrait de {{ user.prenom }} {{ user.nom }}" title="Portrait de {{ user.prenom }} {{ user.nom }}" loading="lazy">
                        {% endif %}
                      <div class="card-body">
                        <h5 class="card-title">{{ user.prenom }} {{ user.nom }}</h5>
                        <p class="card-text mb-1">{{ user.category }}</p>
                        <a href="{{ path('coach_profil_public', {id: user.id}) }}" class="btn boutonProfil mt-1">Voir Profil</a>
                      </div>
                    </div>
                    </a>
                  </div>
                {% endfor %}

                {# fin de la boucle #}
                
            </div>

        </div>

{% endblock %}