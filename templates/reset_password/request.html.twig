{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block content %}

    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container pt-5">

        <h1  class="titre my-5 py-1">Réinitialiser votre mot de passe</h1>

        <div class="listing col-md-6 justify-content-around offset-md-3 my-5 p-5">

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}
            <div>
                <small>
                    Entrez votre adresse mail et nous vous enverrons un lien pour réinitialiser votre mot de passe
                </small>
            </div>

            <button class="boutonMenu btn mt-5">Envoyer</button>
        {{ form_end(requestForm) }}

        </div>

    </div>
{% endblock %}