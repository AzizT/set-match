{% extends 'base.html.twig' %}

{% block title %}Modifier un Membre{% endblock %}

{% block content %}

{% for flashError in app.flashes('verify_email_error') %}
    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}

    <div class="row justify-content-around pt-5">
        <h1 class="titre mt-5 py-1">Modifier un Membre</h1>
    </div>

    <div class="row py-5">

        <div class="listing col-md-8 justify-content-around offset-md-2 p-3">

            {{ form_start(updateUserForm) }}

                <div class="row my-3 justify-content-around">

                    <div class="col-md-6 col-sm-12">
                    {{ form_row(updateUserForm.username, {
                        label: 'Nom d\'utilisateur'
                    }) }}
                    </div>

                    <div class="col-md-6 col-sm-12">
                    {{ form_row(updateUserForm.nom, {
                        label: 'Nom'
                    }) }}
                    </div>

                    <div class="col-md-6 col-sm-12">
                    {{ form_row(updateUserForm.prenom, {
                        label: 'Pr√©nom'
                    }) }}
                    </div>

                    <div class="col-md-6 col-sm-12">
                    {{ form_row(updateUserForm.email, {
                        label: 'Email'
                    }) }}
                    </div>

                    <div class="col-md-6 col-sm-12">
                    {{ form_row(updateUserForm.category, {
                        label: 'Votre Categorie'
                    }) }}
                    </div>

                    <div class="col-md-6 col-sm-12">
                    {{ form_row(updateUserForm.imageFile) }}
                    </div>
                    
                </div>

                <div class="row justify-content-around">
                    <button type="submit" class="boutonMenu btn mb-3">Valider</button>
                </div>

            {{ form_end(updateUserForm) }}

        </div>

    </div>

{% endblock %}
